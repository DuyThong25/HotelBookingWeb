@model IEnumerable<RoomCategory>

<div class="container">
    <div class="card shadow border-1 mt-4">
        <div class="card-header bg-primary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center text-white">
                    <h2>Danh sách loại phòng</h2>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <a asp-area="Admin" asp-controller="RoomCategory" asp-action="Upsert" class="btn btn-outline-primary rounded-2 my-3 p-2">
                    Thêm loại phòng
                </a>
                <table id="myTable" class="table table-bordered table-striped w-100">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tên loại</th>
                            <th>Sức chứa</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (RoomCategory item in Model)
                        {
                            <tr >
                                <td >@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Capacity</td>
                                <td class="text-center">
                                    <div class="w-100 btn-group" role="group">
                                        <a asp-controller="RoomCategory" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                            <i title="Chỉnh sửa" class="bi bi-pencil-square"></i>
                                        </a>
                                        <a onclick="DeleteConfirm('/admin/roomcategory/delete/@item.Id', this)" class="btn btn-outline-danger mx-2">
                                            <i title="Xóa" class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>